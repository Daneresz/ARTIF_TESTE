<%- include('../../admin-matrix-header.ejs') %>

        <div class="admin-header" style="margin-bottom: 40px;">
            <h1>üìù CRIAR POST</h1>
            <p class="subtitle">> New Post Interface</p>
        </div>

        <div style="max-width: 600px; margin: 0 auto;">
            <a href="/admin" class="btn" style="margin-bottom: 20px;">‚Üê Voltar ao Painel</a>
            
            <form method="post" action="/admin/posts/add" enctype="multipart/form-data" class="admin-form">
                <div class="form-group">
                    <label>üìù T√≠tulo do Post:</label>
                    <input type="text" name="titulo" required>
                </div>
                <div class="form-group">
                    <label>üé≠ Artista:</label>
                    <select name="artista" required style="background: #000; color: #00ff00; border: 2px solid #00ff00; padding: 10px; font-family: 'Courier New'; font-weight: bold;">
                        <option value="">Selecione um artista</option>
                        <% if (Artistas && Artistas.length > 0) { %>
                            <% Artistas.forEach(artista => { %>
                                <option value="<%= artista.artista %>"><%= artista.artista %></option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label>üé® Artes (pode selecionar mais de 1 ou nenhuma):</label>
                    <div style="background: rgba(0,255,0,0.05); border: 1px solid #00ff00; padding: 15px; color: #00ff00; font-family: 'Courier New';">
                        <label style="display: block; margin-bottom: 10px; cursor: pointer;">
                            <input type="checkbox" name="explorer" value="true" style="margin-right: 8px;">
                            Apenas Explorando
                        </label>
                        <% if (Artes && Artes.length > 0) { %>
                            <% Artes.forEach(arte => { %>
                                <label style="display: block; margin-bottom: 8px; cursor: pointer;">
                                    <input type="checkbox" name="artes" value="<%= arte.titulo %>" style="margin-right: 8px;">
                                    <%= arte.titulo %>
                                </label>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
                <div class="form-group">
                    <label>üìÑ Descri√ß√£o (opcional):</label>
                    <textarea name="descricao" rows="4" placeholder="Descreva seu post..." style="background: #000; color: #00ff00; border: 2px solid #00ff00; padding: 10px; font-family: 'Courier New'; font-weight: bold; resize: none;"></textarea>
                </div>
                <div class="form-group">
                    <label>üñºÔ∏è Imagem (opcional):</label>
                    <input type="file" name="imagem" accept="image/*" style="color: #00ff00;">
                </div>
                
                <div style="display: flex; gap: 10px;">
                    <a href="/admin/posts/lst" class="btn" style="flex: 1; text-align: center;">Cancelar</a>
                    <button type="submit" class="btn" style="flex: 1;">‚úì Salvar Post</button>
                </div>
            </form>
        </div>

<%- include('../../admin-matrix-footer.ejs') %>

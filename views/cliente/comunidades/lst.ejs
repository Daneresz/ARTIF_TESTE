<%- include('../../cabecalho.ejs') %>
    <div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
        <a href="/cliente" class="card-link view">← Voltar para Cliente</a>
        <a href="/cliente/comunidades/add" class="card-link create">+ Nova Comunidade</a>
    </div>
    <h1>Minhas Comunidades</h1>
    <form method="get" action="/cliente/comunidades/lst" style="margin-bottom: 16px;">
        <input type="text" name="busca" placeholder="Pesquisar por Nome ou Arte"
            value="<%= typeof busca !== 'undefined' ? busca : '' %>">
        <button type="submit">Buscar</button>
    </form>
    <table>
        <tr>
            <td>Nome</td>
            <td>Arte</td>
            <td>Membros</td>
            <td>Ações</td>
        </tr>
        <% if (Comunidades && Comunidades.length > 0) { %>
            <% Comunidades.forEach(comunidade => { %>
                <tr>
                    <td>
                        <strong><%= comunidade.nome %></strong>
                    </td>
                    <td>
                        <%= comunidade.arte %>
                    </td>
                    <td>
                        <%= comunidade.membros ? comunidade.membros.length : 0 %>
                    </td>
                    <td>
                        <a href="/cliente/comunidades/ver/<%= comunidade._id %>" style="color: #007bff; text-decoration: none; margin-right: 15px;">Ver</a>
                        <a href="/cliente/comunidades/entrar/<%= comunidade._id %>" style="color: #28a745; text-decoration: none;">Entrar</a>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="4">nada foi encontrado, verifique se digitou corretamente</td>
            </tr>
        <% } %>
    </table>
    <%- include('../../rodape.ejs') %>

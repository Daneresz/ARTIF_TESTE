<%- include('../../cabecalho.ejs') %>
    <div style="margin-bottom: 20px;">
        <a href="/cliente" style="text-decoration: none; color: #007bff; font-weight: bold; font-size: 1.1rem;">← Voltar para Cliente</a>
    </div>
    <h1>Solicitação de Arte</h1>
    
    <% if (typeof sucesso !== 'undefined' && sucesso) { %>
        <div style="color: #155724; margin-bottom: 16px; padding: 12px; background-color: #d4edda; border: 1px solid #c3e6cb; border-radius: 4px;">
            <%= sucesso %>
        </div>
    <% } %>
    
    <form method="post" action="/cliente/artes/add" enctype="multipart/form-data">
        <div>
            <label>Título da arte:</label>
            <input type="text" name="titulo" required>
        </div>
        <div>
            <label>Descrição (opcional):</label>
            <textarea name="descricao" rows="4" placeholder="Descreva a obra..."></textarea>
        </div>
        <button type="submit">Solicitar Arte</button>
    </form>
    <%- include('../../rodape.ejs') %>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>⚡ PAINEL ADMIN - MATRIX ⚡</title>
    <link rel="stylesheet" href="/css/admin-matrix.css">
</head>
<body class="matrix-admin">
    <div class="binary-rain-container"></div>
    
    <div class="admin-content">
        <div class="admin-header">
            <h1> PAINEL ADMIN </h1>
            <p class="subtitle">> System Access Granted // Welcome Administrator</p>
        </div>
        
        <div class="admin-grid">
            
            <!-- ARTISTAS -->
            <div class="admin-card">
                <h3><i class="fas fa-user-tie"></i> Artistas</h3>
                <div class="card-links">
                    <a href="/admin/artista/add" class="card-link create">➕ Criar Artista</a>
                    <a href="/admin/artista/lst" class="card-link manage">⚙️ Gerenciar</a>
                </div>
            </div>
            
            <!-- ARTES -->
            <div class="admin-card">
                <h3><i class="fas fa-palette"></i> Artes</h3>
                <div class="card-links">
                    <a href="/admin/artes/add" class="card-link create">➕ Criar Arte</a>
                    <a href="/admin/artes/lst" class="card-link manage">⚙️ Gerenciar</a>
                </div>
            </div>
            
            <!-- POSTS -->
            <div class="admin-card">
                <h3><i class="fas fa-newspaper"></i> Posts</h3>
                <div class="card-links">
                    <a href="/admin/posts/add" class="card-link create">➕ Criar Post</a>
                    <a href="/admin/posts/lst" class="card-link manage">⚙️ Gerenciar</a>
                </div>
            </div>
            
            <!-- COMUNIDADES -->
            <div class="admin-card">
                <h3><i class="fas fa-users"></i> Comunidades</h3>
                <div class="card-links">
                    <a href="/admin/comunidades/add" class="card-link create">➕ Criar Comunidade</a>
                    <a href="/admin/comunidades/lst" class="card-link manage">⚙️ Gerenciar</a>
                </div>
            </div>
            
            <!-- SOLICITAÇÕES -->
            <div class="admin-card">
                <h3><i class="fas fa-clipboard"></i> Solicitações</h3>
                <div class="card-links">
                    <a href="/admin/solicitacoes/lst" class="card-link manage">⚙️ Gerenciar</a>
                    <a href="/admin/solicitacoes/lst?status=pendente" class="card-link manage">⚙️ Pendentes</a>
                </div>
            </div>

            <!-- LIXEIRA -->
            <div class="admin-card">
                <h3><i class="fas fa-trash"></i> Lixeira</h3>
                <div class="card-links">
                    <a href="/admin/lixeira/lst" class="card-link manage">⚙️ Gerenciar Deletados</a>
                </div>
            </div>
            
        </div>
    </div>

    <script src="/js/matrix-admin.js"></script>
</body>
</html>
